  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #fafafa;
      line-height: 1.7;
    }

    header {
      background: #111;
      color: #fff;
      text-align: center;
      padding: 20px;
    }

    /* Navigation Menu */
    nav {
      background: #222;
      padding: 10px 0;
    }

    nav ul {
      display: flex;
      justify-content: center;
      margin: 0;
      padding: 0;
      list-style: none;
      flex-wrap: wrap;
    }

    nav ul li {
      margin: 0 10px;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s;
      font-size: 14px;
    }

    nav ul li a:hover {
      color: #ff6347;
    }

    main {
      padding: 40px 20px;
      max-width: 1100px;
      margin: auto;
      background: white;
      border-radius: 8px;
    }

    iframe {
      width: 100%;
      height: 600px;
      border: none;
      border-radius: 8px;
    }

    footer {
      text-align: center;
      padding: 20px;
      background: #111;
      color: white;
      margin-top: 40px;
    }
  </style>
</head>

